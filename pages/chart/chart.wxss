}

.btn-num-wrap {
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  width: 75vw;
}

.btn-op-wrap {
  display: flex;
  width: 25vw;
  flex-direction: column;
  height: 48vw;
}

.btn-op {
  justify-content: center;
  align-items: center;
  background-color: #3b414d;
  color: white;
  display: flex;
  height: 24vw;
  width: 25vw;
  box-sizing: border-box;
  border: #4e545f 1px solid;
}

.btn-input-wrap {
  font-size: 4vw;
  display: flex;
  font-family: '微软雅黑';
}

.jz-input-del {
