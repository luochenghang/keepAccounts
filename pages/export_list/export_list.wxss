.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}

/*头像*/
.row image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin: 20rpx;
}

/*主体*/
.content {
    display: flex;
    flex-direction: column;
    width: 76%;
    /* padding-left: 20rpx; */
}

/*昵称与日期*/
.top, .bottom {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    margin-bottom: 5rpx;
    margin-top: 5px;

}

/*昵称*/
.nickname {
    color: #4d4d4d;
    font-size: 32rpx;
    display: block;
}

/*日期*/
.datetime {
  display: block;
    font-size: 26rpx;
    color: #b2b2b2;
}

/*话语*/
.sentence {
    color: #ccc;
    font-size: 28rpx;
    margin-top: 6rpx;
    overflow: hidden; 
    text-overflow: ellipsis; 
    white-space: nowrap;
}
.copy{
width: 24%;
text-align: center;
margin-left: 5px;
background-color: #8EC6C6;
border-radius: 13px;
height: 25px;
line-height: 25px;
position: absolute;
right: 5px;


}


.bottom_export{
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #d3d3d3;
  /* background-color: #ffd847; */
  width: 100%;
  height: 100rpx;
}

.edit{
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  display: block;

}
