/* pages/todetail/todetail.wxss */
.top{
   height: 200rpx;
  width: 100%;
  background-color: #8EC6C6;
}

.icon_img{
  display: flex;
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
    justify-content: center; /**内容居中*/
}

.icon_url{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  padding: 10rpx;
}

.icon_name{
  text-align: center;
  margin-top: 30rpx;
}

.dt-box{
  /* background-color: aquamarine; */
  width: 100%;
  height: 700rpx;
}

.type{
  height: 80rpx;
  margin-left: 40rpx;
  border-bottom: 2rpx solid #d3d3d3;
}

.key, .value{
  line-height: 80rpx;
  color: #918989;
  float: left;
  /* margin-left: 20rpx;  */
}
.value{
  color: black;
  margin-left: 20rpx;
}




.bottom{
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #d3d3d3;
  /* background-color: #ffd847; */
  width: 100%;
  height: 100rpx;
}

.edit, .del{
  width: 49.4%;
  text-align: center;
  line-height: 100rpx;
  float: left;
}

.line{
  text-align: center;
  color: #d3d3d3;
  line-height: 100rpx;

}

.del{
float: right;
}


