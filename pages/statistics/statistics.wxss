.header {
  /* border: 1px solid red; */
  display: flex;
  height: 140px;
  background-color: #41C6AD;
  color: white;
  padding: 10px 10px;
  border-radius: 0 0 12px 12px;
}
.header .name {
  font-size: 25px;
  font-weight: 500;
  margin-right: 10px;
}
.header image {
  width:30px;
  height:30px;
  border:1px solid;
  padding: 3px 12px;
}
.header image:first-of-type {
  border-radius: 20px 0 0 20px;
  border-right: none;
  background-color: white;
}
.header image:last-of-type {
  border-radius: 0 20px 20px 0;
}


ec-canvas {
  width: 100%;
  height: 100%;
}
.container {
  box-shadow: 0 0 10px #cdcdcd;
  position: absolute;
  top: 50px;
  left: 0;
  right: 0;
  height: 300px;
  margin: 10px 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.hidden {
  visibility: hidden;
}