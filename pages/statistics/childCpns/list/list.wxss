/* pages/statistics/childCpns/list/list.wxss */
/* pages/add/add.wxss */
.statistics_list,.tip {
  /* background-color: #F7FAFC; */
  height: calc(100vh - 740rpx);
  position: absolute;
  top: 320px;
}
.list_header {
  display: flex;
  justify-content: space-between;
  margin: 5px 10px;
}
.list_wrap {
  background-color: white;
  display: flex;
  align-items: center;
}
.list_info {
  flex: 1;
  border-bottom: 1px solid #cdcdcd;
  margin-left: 10px;
  margin-right: 10px;
  padding: 15px 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list_info .per {
  color: #cdcdcd;
  font-size: 15px;
  margin-top: 2px;
}
.list_wrap .list_content:last-child .list_info {
  border-bottom: none;
}
/* icon样式 */
.list_wrap image {
  margin-left: 10px;
   width: 40px;
  height: 40px;
  /* border:1px solid red; */
  background-color: #F6F6F6;
  padding: 5px;
  border-radius: 50%;
}
.tip {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tip_btn text{
  color: #FFBE00;
}
.tip .tip_btn image{
  width: 25px;
  height: 25px;
  vertical-align: middle;
}