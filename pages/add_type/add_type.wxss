::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.content{
    margin-top: 80rpx;
    position: fixed; 
    width: 100%;
    height: 80%;
}

.iconfont {
  font-size: 30px !important;
}

.nav-top{
  width: 100%;
  height: 80rpx;
  background-color: #8EC6C6;
  position: fixed; 
  top: 0;
}

.nav {
  width: 500rpx;
  height: 59rpx;
  margin: 0 auto;
  border: 1px solid #2c2c2c;
  border-radius: 5px;
  font-size: 30rpx;
  color: #2c2c2c;
  background-color: #8EC6C6;
}

.nav-item {
  float: left;
  width: 50%;
  line-height: 59rpx;
  text-align: center;
}

.nav-item:nth-child(0) {
  border-right: 1px solid #8EC6C6;
}

.nav-active {
  background-color: #2c2c2c;
  color: #8EC6C6;
  height: 59rpx;
}

.jz-item {
  /* margin-top: 80rpx; */
  position: relative;
  width: 100%;
  height: 100%;
  clear: both;
  /* background-color: red; */
  /* flex-wrap: wrap; */
}

.jz-item-img {
  /* background-color: #444; */
  width: 20%;
  height: 80px;
  text-align: center;
  float: left;
  margin-top: 15px;
}


.remark {
  float: right;
  width: 33%;
}

.remark input {
  text-align: right;
  line-height: 40px;
  width: 100%;
  height: 40px;
}





.item-wrapper {
  padding: 10px;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  /* background-color: red; */
}

.item {
  width: 54px;
  /* height: 44px; */
  padding: 16px 18px 16px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
  flex-wrap: wrap;
  /* background-color: blue; */
}

.item image {
  width: 30px;
  height: 30px;
  border-radius: 100%;
  padding: 10px;
  /* background-color: #ccc; */
  float: left;
}

.item text {
  color: rgb(119, 119, 119);
}

.info-money{
  font-size: 5vw;
  color: #797979;
}


.blue{
  background-color: #ccc;
}

.red{
  background-color: #8EC6C6;
}



/* components/jzinput/jzinput.wxss *//* components/jz-input.wxss */

.btn-num {
  box-sizing: border-box;
  background-color: #3b414d;
  color: white;
  width: 25vw;
  height: 12vw;
  display: flex;
  justify-content: center;
  align-items: center;
  border: #4e545f 1px solid;
}


.jz-input{
  position: fixed;
  bottom:0;
}


.jz-input-7, .jz-input-8, .jz-input-9, .jz-input-4, .jz-input-5, .jz-input-6,
.jz-input-1, .jz-input-2, .jz-input-3 {
  border-bottom: #4e545f 1px solid;
}

.jz-input-7, .jz-input-8, .jz-input-4, .jz-input-5, .jz-input-1, .jz-input-2,
.jz-input-empty, .jz-input-dot, jz-input-0{
  border-right: #4e545f 1px solid;
}

.btn-num-wrap {
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  width: 75vw;
}

.btn-op-wrap {
  display: flex;
  width: 25vw;
  flex-direction: column;
  height: 48vw;
}

.btn-op {
  justify-content: center;
  align-items: center;
  background-color: #3b414d;
  color: white;
  display: flex;
  height: 24vw;
  width: 25vw;
  box-sizing: border-box;
  border: #4e545f 1px solid;
}

.btn-input-wrap {
  font-size: 4vw;
  display: flex;
  font-family: '微软雅黑';
}

.jz-input-del {
  border-bottom: none;
}

.jz-input-del image{
  width: 60rpx;
  height: 60rpx;
}


.btn-hover {
  /* box-shadow:0px 0px 8px rgb(61, 50, 73) inset;  */
  background-color: #8EC6C6;
  color:black;
}

.jz-input-ok {
  /* background-color: #f4ea2a; */
  color: #8EC6C6;
}


.jz-input-info-wrap {
  padding: 1vw;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: #797979 1px solid;
  border-bottom: #797979 1px solid;
}

.jz-input-date-account-wrap {
  display: flex;
  align-items: center;
}

.jz-input-remark-input {
  display: flex;
  align-items: center;
  width: 50vw;
  font-size: 3.5vw;
  justify-content: center;
  color: #797979;
  /* border-radius: 50%; */
  /* border-bottom: #ccc 1px solid; */
}

.jz-input-account-item-info-wrap {
  display: flex;
}

.jz-input-account-item {
  padding: 2vw 5vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: #eee 1rpx solid;
}

.jz-input-account-item-icon {
  width: 7vw;
  height: 7vw;
  border-radius: 4rpx;
  margin-right: 2vw;
}

.jz-input-account-item-name, .jz-input-account-balance {
  font-size: 4vw;
  color: #333;
  display: flex;
  align-items: center;
}

.jz-input-account-item-selected {
  color: rgb(196, 151, 3) !important;
}

.jz-input-account {
  margin-left: 4vw;
  display: flex;
  align-items: center;
}

.jz-input-account-icon {
  width: 5vw;
  height: 5vw;
  border-radius: 3rpx;
  margin-right: 2vw;
}

.jz-input-account-name {
  font-size: 3.5vw;
  color: #797979;
  display: flex;
  align-items: center;
}


.info-money{
  font-size: 5vw;
  color: #797979;
}
